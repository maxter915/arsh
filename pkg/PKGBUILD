# Maintainer: twitter.com/CallMeZatiel
pkgname=arsh
destname="/usr/bin"
srclang="/usr/share/arsh"
pkgver=0.0.2
pkgrel=1
pkgdesc="Arsh installer"
arch=('any')
url="https://github.com/callmezatiel/arsh"
license=('GPL3')
makedepends=('git')
depends=('curl')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+https://github.com/callmezatiel/${pkgname}.git")
sha256sums=('SKIP')

package() {
    mkdir -p "${pkgdir}${srclang}"
    mkdir -p "${pkgdir}${destname}"
    cp -r "${srcdir}/${pkgname}/lang" "${pkgdir}${srclang}"
    cp -r "${srcdir}/${pkgname}/arsh" "${pkgdir}${destname}"
}
